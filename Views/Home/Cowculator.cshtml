<h1>Cowculator</h1>
<p>Find out how much it will costs to gain your OCD certification!</p>

<!-- Calculator Form -->
<div class="calculator-container">
    <label for="hours">Number of Hours:</label>
    <input type="number" id="hours" min="1" placeholder="Enter hours" required>
    <span id="error-message" style="color: red; display: none;">Please enter a positive number.</span>

    <label for="rate">Hourly Rate ($):</label>
    <input type="text" id="rate" value="5.00" readonly>

    <button id="calculate-btn">Calculate Total</button>

    <label for="total">Total Cost ($):</label>
    <input type="text" id="total" readonly>
        
</div>

<!-- jQuery Script -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="~/js/cowculator.js"></script>
